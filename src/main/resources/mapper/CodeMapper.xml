<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rocklin.offer.mapper.CodeMapper">

    <resultMap id="BaseResultMap" type="com.rocklin.offer.model.entity.Code">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="code" property="code" jdbcType="VARCHAR"/>
        <result column="merchant_id" property="merchantId" jdbcType="BIGINT"/>
        <result column="price" property="price" jdbcType="DECIMAL"/>
        <result column="is_used" property="isUsed" jdbcType="TINYINT"/>
        <result column="user_account" property="userAccount" jdbcType="VARCHAR"/>
        <result column="used_time" property="usedTime" jdbcType="TIMESTAMP"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="is_delete" property="isDelete" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, code, merchant_id, price, is_used, user_account, used_time, create_time, update_time, is_delete
    </sql>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM code
        WHERE id = #{id} AND is_delete = 0
    </select>

    <select id="selectByCodeAndNotUsed" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM code
        WHERE code = #{code} AND is_used = 0 AND is_delete = 0
    </select>
    <select id="selectListByMerchantId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM code
        WHERE merchant_id = #{id} AND is_delete = 0
        ORDER BY create_time DESC
    </select>

    <update id="updateById" parameterType="com.rocklin.offer.model.entity.Code">
        UPDATE code
        SET
            is_used = #{isUsed},
            user_account = #{userAccount},
            used_time = #{usedTime}
        WHERE id = #{id}
    </update>
    <update id="updateCodeIsDelete">
        UPDATE code
        SET
            is_delete = 0
        WHERE code = #{code}
    </update>

    <insert id="insert" parameterType="com.rocklin.offer.model.entity.Code">
        INSERT INTO code (id, code, price, merchant_id, is_delete)
        VALUES (UUID_SHORT(), #{code}, #{price}, #{merchantId}, #{isDelete})
    </insert>

</mapper>